{
  "version": 2,
  "functions": {
    "api/server.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/server.js"
    }
  ],
  "cron": [
    {
      "path": "api/pet/medications/reset-medication-reminders",
      "schedule": "0 6 * * *"
    }
  ]
}